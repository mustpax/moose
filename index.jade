          div
            h2 Parse binary numbers with #[code .reduce()]
            pre: code.
              function parseBinary(str) {
                return str.split('').reduce(function(a, b) {
                  return a * 2 + (b === '0' ? 0 : 1);
                }, 0);
              }
              
              parseBinary('0000') -> 0
              parseBinary('0001') -> 1
              parseBinary('111')  -> 7
              parseBinary('1000') -> 8
          

